<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_estate_property_search">
            <field name="name">estate_property.search</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Nom"/>
                    <field name="date_availability"/>
                    <field name="selling_price"/>
                    <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                    

                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="view_estate_property_form">
            <field name="name">estate_property.form</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" readonly="0"/>
                        <button name="sell_property" string="Vendue" type="object" class="oe_highlight" states="offer_accepted"/>
                        <button name="sell_property" string="Vendue" type="object" class="btn-secondary" states="new, offer_received"/>
                        <button name="cancel_property" string="Annuler" type="object" class="btn-secondary" states="new,offer_received,offer_accepted" />
                    </header>                
                    <sheet>
                    <!-- champs du formulaire -->
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group col="2">
                            <group>
                                <field name="postcode"/>
                                <field name="property_type_id" widget="many2one" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="best_price"/>
                                
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group col="2">
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <!-- <field name="active"/> -->
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="total_area"/>
                                    </group>
                                </group>

                            </page>
                            <page string="Offres" > 
                                <tree>
                                    <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted', 'sold', 'cancelled'))]}"/>
                                </tree>
                            </page>
                            <page string="Autres infos">
                                <group>
                                    <field name="salesman_id"/>
                                    <field name="buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_estate_property_tree">
            <field name="name">estate_property.tree</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <tree string="Liste" decoration-success="state=='offer_received'"  decoration-muted="state == 'sold'">
                <!-- <tree string="Liste" decoration-success="state=='offer_received'"  decoration-bold-green="state == 'offer_accepted'" decoration-muted="state == 'sold'"> -->
                    <field name="name"/>
                    <field name="property_type_id" widget="many2one" options="{'no_create': True, 'no_edit': True}"/>
                    <field name="postcode"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" optional="hide"/>
                    <field name="buyer" optional="hide"/>
                    <field name="salesman_id" optional="hide"/>
                    <field name="state" optional="hide"/>
                </tree>
            </field>
        </record>    
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Propriété</field>
            <field name="res_model">estate_property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- <record id="estate_property_menu" model="ir.ui.menu">
            <field name="name">Propriétés immobilières</field>
            <field name="sequence" eval="1"/>
            <field name="action" ref="estate_property_action"/>
        </record> -->
    </data>
</odoo>